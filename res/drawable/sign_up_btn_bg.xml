<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <padding
                android:bottom="1dp"
                android:left="1dp"
                android:right="1dp"
                android:top="1dp" />

            <solid android:color="#f2f2f2" />

            <stroke
                android:width="1dp"
                android:color="#f2f2f2" />

            <corners
                android:bottomLeftRadius="11dp"
                android:bottomRightRadius="11dp"
                android:topLeftRadius="11dp"
                android:topRightRadius="11dp" />
        </shape>
    </item>
    <item
        android:bottom="0dp"
        android:left="0dp"
        android:right="0dp"
        android:top="0dp">
        <shape android:shape="rectangle" >
            <solid android:color="@color/sign_up_btn_bg" />

            <corners
                android:bottomLeftRadius="11dp"
                android:bottomRightRadius="11dp"
                android:topLeftRadius="11dp"
                android:topRightRadius="11dp" />
        </shape>
    </item>

</layer-list>